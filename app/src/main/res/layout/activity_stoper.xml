<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Stoper">

    <ImageView
        android:id="@+id/towerImagrView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tower"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
    <ImageView
        android:id="@+id/pointerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pointer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/towerImagrView"
        android:layout_marginTop="30dp"
        android:textColor="@color/logoColor"
        android:textSize="35dp"/>

    <Button
        android:id="@+id/runButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:text="@string/runButton"
        android:textColor="@color/logoColor"
        android:background="@drawable/buttonbackground"
        android:layout_below="@id/chronometer"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/stopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:text="@string/stopButton"
        android:textColor="@color/logoColor"
        android:background="@drawable/stopbuttonbackground"
        android:layout_below="@id/runButton"
        android:layout_marginTop="10dp"/>

</RelativeLayout>